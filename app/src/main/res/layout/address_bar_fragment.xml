<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

          <ListView
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
             android:id="@+id/searchResultList"
             android:layout_height="wrap_content">

        </ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/homeBar"
                android:layout_height="wrap_content">
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="50dp"
                    android:src="@drawable/ic_home_black_24dp"
                    android:tint="#fff"
                    android:layout_centerVertical="true"
                    android:id="@+id/home"
                    app:fabCustomSize="50dp"
                    app:backgroundTint="@color/pink"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/text1"
                    android:layout_toEndOf="@id/home"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select home address"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:id="@+id/homeAddress"
                    android:layout_below="@id/text1"
                    android:layout_toEndOf="@id/home"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/workBar"
                android:layout_height="wrap_content">
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="50dp"
                    android:src="@drawable/ic_work_black_24dp"
                    android:tint="#fff"
                    android:layout_centerVertical="true"
                    android:id="@+id/work"
                    app:fabCustomSize="50dp"
                    app:backgroundTint="@color/pink"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    android:id="@+id/text2"
                    android:textColor="#000"
                    android:layout_toEndOf="@id/work"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select work address"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:id="@+id/workAddress"
                    android:layout_below="@id/text2"
                    android:layout_toEndOf="@id/work"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/favBar"
                android:layout_height="wrap_content">
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="50dp"
                    android:src="@drawable/ic_home_black_24dp"
                    android:tint="#fff"
                    android:layout_centerVertical="true"
                    android:id="@+id/fav"
                    app:fabCustomSize="50dp"
                    app:backgroundTint="@color/pink"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorite"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/text3"
                    android:layout_toEndOf="@id/fav"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select most used address"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:id="@+id/favAddress"
                    android:layout_below="@id/text3"
                    android:layout_toEndOf="@id/fav"
                    />
            </RelativeLayout>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/histroyResultList"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
